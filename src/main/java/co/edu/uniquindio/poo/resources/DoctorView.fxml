<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="co.edu.uniquindio.poo.controllers.DoctorController" 
    spacing="10" padding="10">

    <!-- Tabla de Médicos -->
    <TableView fx:id="doctorTable" VBox.vgrow="ALWAYS" editable="true">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="70"/>
            <TableColumn fx:id="nameColumn" text="Nombre Completo" prefWidth="200"/>
            <TableColumn fx:id="phoneColumn" text="Teléfono" prefWidth="120"/>
            <TableColumn fx:id="specialtyColumn" text="Especialidad" prefWidth="150"/>
            <TableColumn fx:id="licenseColumn" text="Licencia" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <!-- Formulario para Agregar/Editar -->
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="idField" promptText="ID" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <TextField fx:id="nameField" promptText="Nombre Completo" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="Teléfono:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" promptText="Teléfono" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Especialidad:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <TextField fx:id="specialtyField" promptText="Cardiología, etc." GridPane.rowIndex="1" GridPane.columnIndex="3"/>
        
        <Label text="Licencia:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="licenseField" promptText="Licencia Médica" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Botones de Acción -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Agregar Médico" onAction="#handleAddDoctor" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Editar Seleccionado" onAction="#handleEditDoctor" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button text="Eliminar Seleccionado" onAction="#handleDeleteDoctor" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
    </HBox>

</VBox>