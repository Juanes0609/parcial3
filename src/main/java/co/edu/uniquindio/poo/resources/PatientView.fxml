<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="co.edu.uniquindio.poo.controllers.PatientController" 
    spacing="10" padding="10">

    <!-- Tabla de Pacientes -->
    <TableView fx:id="patientTable" VBox.vgrow="ALWAYS" editable="true">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="70"/>
            <TableColumn fx:id="nameColumn" text="Nombre Completo" prefWidth="200"/>
            <TableColumn fx:id="phoneColumn" text="Teléfono" prefWidth="120"/>
            <TableColumn fx:id="historyColumn" text="Historial" prefWidth="150"/>
            <TableColumn fx:id="addressColumn" text="Dirección" prefWidth="250"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <!-- Formulario para Agregar/Editar -->
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="idField" promptText="ID" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <TextField fx:id="nameField" promptText="Nombre Completo" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="Teléfono:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" promptText="Teléfono" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Historial:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <TextField fx:id="historyField" promptText="Historial (Opcional)" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

        <Label text="Dirección:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="addressField" promptText="Dirección" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Agregar Paciente" onAction="#handleAddPatient" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Editar Seleccionado" onAction="#handleEditPatient" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button text="Eliminar Seleccionado" onAction="#handleDeletePatient" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
    </HBox>

</VBox>