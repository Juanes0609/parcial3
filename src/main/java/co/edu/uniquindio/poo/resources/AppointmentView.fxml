<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="co.edu.uniquindio.poo.controllers.AppointmentController" 
    spacing="10" padding="10">

    <!-- Tabla de Citas -->
    <TableView fx:id="appointmentTable" VBox.vgrow="ALWAYS" editable="true">
        <columns>
            <TableColumn fx:id="patientColumn" text="Paciente" prefWidth="150"/>
            <TableColumn fx:id="doctorColumn" text="Médico" prefWidth="150"/>
            <TableColumn fx:id="dateTimeColumn" text="Fecha y Hora" prefWidth="180"/>
            <TableColumn fx:id="costColumn" text="Costo Base" prefWidth="100"/>
            <TableColumn fx:id="strategyColumn" text="Estrategia" prefWidth="120"/>
            <TableColumn fx:id="totalCostColumn" text="Costo Total" prefWidth="120"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <!-- Formulario para Agregar Cita -->
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <Label text="Paciente:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="patientComboBox" promptText="Seleccionar Paciente" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Médico:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <ComboBox fx:id="doctorComboBox" promptText="Seleccionar Médico" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="Fecha:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="datePicker" promptText="Fecha" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Hora:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <TextField fx:id="timeField" promptText="HH:MM (e.g., 14:30)" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

        <Label text="Costo Base:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="baseCostField" promptText="Costo Base" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Estrategia de Precio:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
        <ComboBox fx:id="strategyComboBox" promptText="Seleccionar Estrategia" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Programar Cita" onAction="#handleAddAppointment" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Eliminar Seleccionada" onAction="#handleDeleteAppointment" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
    </HBox>

</VBox>